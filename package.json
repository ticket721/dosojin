{
    "name": "dosojin",
    "version": "1.0.0",
    "description": "dosojin is a flexible funds movement engine",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test:lint": "tslint --project .",
        "test:jest": "jest --expand --verbose",
        "test:coverage": "yarn test:jest -- --coverage",
        "test:editorconfig": "editorconfig-cli",
        "prebuild": "rimraf dist",
        "build:module": "yarn prebuild && tsc",
        "build:doc": "rm -rf docs && typedoc --out docs sources/index.ts --theme markdown --readme none --name D≈çsojin",
        "publish": "yarn build:module && yarn publish",
        "format": "prettier --write \"sources/**/*.ts\"",
        "format:check": "prettier --check \"sources/**/*.ts\"",
        "@lerna/postinstall": "yarn build:module",
        "@lerna/postclean": "rm -rf dist && rm -rf node_modules"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ticket721/dosojin.git"
    },
    "keywords": [
        "flexible",
        "funds",
        "movement",
        "engine",
        "typescript",
        "crypto",
        "exchange",
        "sepa",
        "money"
    ],
    "editorconfig-cli": [
        "./*.js",
        "./package.json",
        "./tsconfig.json",
        "./tslint.json",
        "./sources/**/*.ts"
    ],
    "author": "Ticket721 <contact@ticket721.com> (https://ticket721.com)",
    "contributors": [
        "Iulian Rotaru <iulian.rotaru@ticket721.com> (https://github.com/mortimr)",
        "Jeremy Goldsztejn <jeremy.goldsztejn@ticket721.com> (https://github.com/goldiggy)"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ticket721/dosojin/issues"
    },
    "homepage": "https://github.com/ticket721/dosojin#readme",
    "devDependencies": {
        "@commitlint/cli": "8.3.5",
        "@commitlint/config-conventional": "8.3.4",
        "@htmlacademy/editorconfig-cli": "1.0.0",
        "@types/bn.js": "4.11.6",
        "@types/deep-equal": "1.0.1",
        "@types/jest": "25.1.2",
        "@types/lodash.get": "^4.4.6",
        "@types/stripe": "7.13.21",
        "coveralls": "3.0.9",
        "husky": "4.3.0",
        "jest": "25.1.0",
        "prettier": "^1.19.1",
        "stripe": "8.12.0",
        "ts-jest": "25.2.0",
        "ts-mockito": "2.5.0",
        "ts-node": "8.6.2",
        "tslint": "6.0.0",
        "tslint-config-prettier": "1.18.0",
        "typedoc": "0.16.10",
        "typedoc-plugin-markdown": "2.2.16",
        "typescript": "3.7.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "editorconfig-cli",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "peerDependencies": {
        "stripe": "8.12.0"
    },
    "dependencies": {
        "bn.js": "5.1.1",
        "decimal.js": "^10.2.0",
        "deep-equal": "2.0.1",
        "lodash.get": "^4.4.2"
    }
}
