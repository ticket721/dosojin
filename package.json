{
    "name": "dosojin",
    "version": "1.0.0",
    "description": "dosojin is a flexible funds movement engine",
    "main": "index.js",
    "scripts": {
        "test:lint": "tslint --project .",
        "test:jest": "jest --expand --verbose",
        "test:coverage": "npm run test:jest -- --coverage",
        "test:editorconfig": "editorconfig-cli",
        "prebuild": "rimraf dist",
        "build:module": "npm run prebuild && tsc",
        "build:doc": "rm -rf docs && typedoc --out docs sources/index.ts --theme markdown --readme none --name D≈çsojin",
        "prepublish": "npm run build:module"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ticket721/dosojin.git"
    },
    "keywords": [
        "flexible",
        "funds",
        "movement",
        "engine",
        "typescript",
        "crypto",
        "exchange",
        "sepa",
        "money"
    ],
    "editorconfig-cli": [
        "./*.js",
        "./package.json",
        "./tsconfig.json",
        "./tslint.json",
        "./sources/**/*.ts"
    ],
    "author": "Ticket721 <contact@ticket721.com> (https://ticket721.com)",
    "contributors": [
        "Iulian Rotaru <iulian.rotaru@ticket721.com> (https://github.com/mortimr)",
        "Jeremy Goldsztejn <jeremy.goldsztejn@ticket721.com> (https://github.com/goldiggy)"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ticket721/dosojin/issues"
    },
    "homepage": "https://github.com/ticket721/dosojin#readme",
    "devDependencies": {
        "@commitlint/cli": "8.2.0",
        "@commitlint/config-conventional": "8.2.0",
        "@htmlacademy/editorconfig-cli": "1.0.0",
        "@types/bn.js": "4.11.6",
        "@types/deep-equal": "1.0.1",
        "@types/jest": "24.9.0",
        "coveralls": "3.0.9",
        "husky": "3.1.0",
        "jest": "24.9.0",
        "ts-jest": "24.2.0",
        "ts-mockito": "2.5.0",
        "ts-node": "8.5.4",
        "tslint": "5.20.1",
        "tslint-config-prettier": "1.18.0",
        "typedoc": "0.15.3",
        "typedoc-plugin-markdown": "2.2.11",
        "typescript": "3.7.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "editorconfig-cli",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {
        "bn.js": "5.1.1",
        "deep-equal": "2.0.1"
    }
}
