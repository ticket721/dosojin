{
    "name": "dosojin",
    "version": "1.0.0",
    "description": "dosojin is a flexible funds movement engine",
    "main": "index.js",
    "scripts": {
        "test:lint": "tslint --project .",
        "test:mocha": "ts-mocha -p tsconfig.json sources/**/*.spec.ts",
        "test:coverage": "rm -rf coverage && rm -rf .nyc_output && nyc ts-mocha -p tsconfig.json sources/**/*.spec.ts",
        "test:editorconfig": "editorconfig-cli",
        "build:module": "tsc",
        "build:doc": "rm -rf docs && typedoc --out docs sources/index.ts --theme markdown --readme none --name D≈çsojin",
        "prepublish": "npm run build:module"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ticket721/dosojin.git"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "check-coverage": true,
        "reporter": [
            "text",
            "lcov"
        ],
        "include": [
            "sources/*.ts",
            "sources/**/*.ts"
        ]
    },
    "keywords": [
        "flexible",
        "funds",
        "movement",
        "engine",
        "typescript",
        "crypto",
        "exchange",
        "sepa",
        "money"
    ],
    "editorconfig-cli": [
        "./*.js",
        "./package.json",
        "./tsconfig.json",
        "./tslint.json",
        "./sources/**/*.ts"
    ],
    "author": "Ticket721 <contact@ticket721.com> (https://ticket721.com)",
    "contributors": [
        "Iulian Rotaru <iulian.rotaru@ticket721.com> (https://github.com/mortimr)",
        "Jeremy Goldsztejn <jeremy.goldsztejn@ticket721.com> (https://github.com/goldiggy)"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ticket721/dosojin/issues"
    },
    "homepage": "https://github.com/ticket721/dosojin#readme",
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.3.3",
        "@htmlacademy/editorconfig-cli": "^1.0.0",
        "@istanbuljs/nyc-config-typescript": "^0.1.3",
        "@types/bn.js": "^4.11.5",
        "@types/expect": "^24.3.0",
        "@types/lodash": "^4.14.149",
        "@types/mocha": "^5.2.7",
        "coveralls": "^3.0.9",
        "husky": "^3.1.0",
        "mocha": "^6.2.2",
        "nyc": "^14.1.1",
        "ts-mocha": "^6.0.0",
        "ts-node": "^8.5.4",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "typedoc": "^0.15.3",
        "typedoc-plugin-markdown": "^2.2.11",
        "typescript": "^3.7.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "editorconfig-cli",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {
        "bn.js": "^5.0.0",
        "lodash": "^4.17.15"
    }
}
